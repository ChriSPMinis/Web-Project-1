
    <div class="container">
      <div class="row">
        <h2>Add Student</h2>
        <br>
        <form method="post" action="/students/add">
            <fieldset>
            <legend>Student Information</legend>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="firstName">First Name:</label>
                        <input class="form-control" id="firstName" name="firstName" type="text">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="last_name">Last Name:</label>
                        <input class="form-control" id="lastName" name="lastName" type="text">
                    </div>
                </div>
        
      </div>

      <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="email">Email:</label>
                <input class="form-control" id="email" name="email" type="email">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="phone">Phone:</label>
                <input class="form-control" id="phone" name="phone" type="text">
            </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label for="addressStreet">Address(Street):</label>
                <input class="form-control" id="addressStreet" name="addressStreet" type="text">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="addressCity">Address(City):</label>
                <input class="form-control" id="addressCity" name="addressCity" type="text">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="addressState">Address(State):</label>
                <input class="form-control" id="addressState" name="addressState" type="text">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="addressPostal">Address(Zip Code):</label>
                <input class="form-control" id="addressPostal" name="addressPostal" type="text">
            </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>Status:</label>
                <br>
                <label class="checkbox-inline">
                    Full Time
                    <input type="radio" id="statusFT" name="status" value="Full Time">                    
                </label>
                <label class="checkbox-inline">
                    Part Time
                    <input type="radio" id="statusFT" name="status" value="Full Time">
                </label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="program">Program:</label>
                {{#if programs}}
                    <select class="form-control" name="program" id="program">
                     <option value="">Select Program</option>
                {{#each programs}}
                    <option value="{{programCode}}"> {{programCode}} - {{programName}}</option>
                {{/each}}
                    </select>
                {{else}}
                    <div>No Programs</div>
                {{/if}}   
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="isInternationalStudent">International Student?</label>
                <input class="form-control" type="checkbox" name="isInternationalStudent">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="expectedCredential">Expected Credential:</label>
                <input class="form-control" id="expectedCredential" name="expectedCredential" type="text">
            </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="registrationDate">Registration Date:</label>
                <input class="form-control" id="registrationDate" name="registrationDate" type="text">
            </div>
        </div>
      </div>
    </fieldset>
    <hr>
    <input type="submit" class="btn btn-primary pullright" value="Add Student">
    </div>
</form>

